<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/SwansDown">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/title"
        android:text="LOGIN"
        android:id="@+id/title"
        android:layout_margin="20dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_below="@+id/title"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:id="@+id/apps_icon"
        />

    <EditText
        android:textColorHint="@color/Kaitoke"
        android:id="@+id/user_login_username"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/apps_icon"
        android:layout_marginTop="20dp"
        android:hint=" UserName:"
        android:background="@null"
        android:textStyle="bold"
        android:padding="5dp"
        android:drawableLeft="@drawable/ic_username"
        />
    <EditText
        android:textColorHint="@color/Kaitoke"
        android:id="@+id/user_login_password"
        android:layout_width="250dp"
        android:background="@null"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/user_login_username"
        android:layout_marginTop="30dp"
        android:hint="Password:"
        android:textStyle="bold"
        android:padding="5dp"
        android:drawableLeft="@drawable/ic_password"
        android:inputType="textPassword"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/user_login_password"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardElevation="10dp"
        android:id="@+id/btn_login">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="#FFF"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register here"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="20dp"
        android:layout_marginStart="80dp"
        android:onClick="reg_btn"
        android:textColor="@color/Kaitoke"
        />

    <TextView
        android:textColor="@color/Kaitoke"
        android:id="@+id/forget_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="80dp"
        android:onClick="forget_pw"
        android:layout_alignParentRight="true"/>

</RelativeLayout>